<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="operation" author="troinin" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="operation"/>
            </not>
        </preConditions>

        <createTable tableName="operation">
            <column name="operation_id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="balance_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="implement_time" type="timestamp(0)">
                <constraints nullable="false"/>
            </column>
            <column name="count_delta" type="decimal" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="operation"
                                 baseColumnNames="balance_id"
                                 constraintName="fk_operation_balance"
                                 referencedTableName="balance"
                                 referencedColumnNames="balance_id"
                                 onDelete="RESTRICT"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="operation"
                                      constraintName="fk_operation_balance"/>
            <dropTable tableName="operation"/>
        </rollback>
    </changeSet>

</databaseChangeLog>